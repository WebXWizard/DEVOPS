# System Details
uname -a                                # All system information
cat /etc/os-release                     # Distribution details
hostnamectl                             # Detailed hostname info
uptime                                 # System uptime
whoami                                 # Current user
id                                     # User and group IDs
w                                      # Who is logged in and what they're doing
last                                   # Login history
history                                # Command history

# Resource Monitoring
top                                    # Interactive process monitor
htop                                   # Enhanced process monitor (install first)
ps aux                                 # All running processes
ps -ef                                 # Detailed process list
ps aux | grep process-name              # Find specific process
pstree                                 # Process tree
free -h                                # Memory usage in human-readable format
df -h                                  # Disk space usage
df -i                                  # Inode usage
du -sh /home/user                      # Directory size
du -sh *                               # Size of all items in current directory
netstat -tulpn                         # Network connections
ss -tulpn                              # Modern alternative to netstat
lsof -i :80                            # Process using port 80
ip addr show                           # Network interfaces
ip route show                          # Routing table
