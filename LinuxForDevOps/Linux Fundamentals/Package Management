# Ubuntu/Debian (apt)
sudo apt update                         # Update package list
sudo apt list --upgradable              # List upgradeable packages
sudo apt install package-name           # Install package
sudo apt install package1 package2      # Install multiple packages
sudo apt remove package-name            # Remove package
sudo apt purge package-name             # Remove package and config files
sudo apt autoremove                     # Remove unused packages
sudo apt upgrade                        # Upgrade all packages
dpkg -l | grep package                  # Check if package installed
dpkg -L package-name                    # List files installed by package
apt search keyword                      # Search for packages

# RHEL/CentOS/Fedora (yum/dnf)
sudo yum update                         # Update packages
sudo yum install package-name           # Install package
sudo yum remove package-name            # Remove package
yum list installed                      # List installed packages
yum info package-name                   # Package information
yum search keyword                      # Search for packages
sudo dnf install package-name           # Fedora newer syntax

# Alpine Linux (apk)
apk update                              # Update package index
apk add package-name                    # Install package
apk del package-name                    # Remove package
apk list                                # List available packages
apk search keyword                      # Search packages
